<view class="page">
    <view class="page__hd">
        <text class="page__title">{{text}}</text>
        <text class="page__desc">{{text}}</text>
    </view>

    <view class="page__bd">
        <!-- left-icon这个属性好像没有什么用-->
        <view class="section seciton_gap">
            <text class="section__title">设置left/right icon</text>
            <view class="body-view">
                <slider bindchange="slider1change" left-icon="cancel" right-icon="success_no_circle" />
            </view>
        </view>

        <view class="section seciton_gap">
            <text class="section__title">设置step</text>
            <view class="body-view">
                <slider bindchange="slider2change" step="5" />
            </view>
        </view>
        <view class="section seciton_gap">
            <text class="section__title">显示当前值</text>
            <view class="body-view">
                <slider bindchange="slider3change" value="10" show-value/>
            </view>
        </view>
        <view class="section seciton_gap">
            <text class="section__title">设置最大/最小值</text>
            <view class="body-view">
                <slider bindchange="slider4change" max="200" min="100" show-value/>
            </view>
        </view>
    </view>

</view>