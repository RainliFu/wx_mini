<view class="page">
    <view class="page__hd">
        <text class="page__title">{{text}}</text>
        <text class="page__desc">{{text}}</text>
    </view>

    <view class="page__bd">
        <view class="section">
            <button bindtap="showLoadingToast">showLoading toast</button>
        </view>

         <view class="section">
            <button bindtap="showSuccessToast">showSuccess toast</button>
        </view>

           <view class="section">
            <button bindtap="showToast">show toast</button>
        </view>
    </view>
</view>