<view class="page">
    <view class="page__hd">
        <text class="page__title">{{text}}</text>
        <text class="page__desc">{{text}}</text>
    </view>
    <view class="page__bd">
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="default" hover-class="other-button-hover">Button</button>
        <button type="primary" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary">primary</button>
        <button type="warn" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="warn">warn</button>
        <button bindtap="setDisabled">点击设置disable属性</button>
        <button bindtap="setPlain">点击设置以上按钮plain属性</button>
        <button bindtap="setLoading">点击设置以上按钮loading属性</button>
    </view>
</view>